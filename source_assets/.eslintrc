{
    "__comment": "This is the es5 .eslintrc. You can read more about eslint here: http://eslint.org/",

    "env": {
        "browser": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "indent": ["error", 2],
        "comma-dangle": ["error", "never"],
        "linebreak-style": ["error", "unix"],
        "no-debugger": ["warn"]
    }
}
